    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm test",
            "name": "Run npm test",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/reverse/array.reverse.js",
            "sourceMaps": true,
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run single test file",
            "command": "npm test -- ${fileBasenameNoExtension}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run single file",
            "command": "npm test -- ${fileBasenameNoExtension}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Run ts single file",
            "command": "npx ts-node ${relativeFile}"
        }
    ]
}